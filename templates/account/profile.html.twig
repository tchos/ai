{% extends 'base.html.twig' %}

{% block title %}Modifications du profil{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="mt-3">Modifications du profil !</h2>
        <hr>

        {# Affichage du formulaire créé avec symfony#}
        {{ form_start(form) }}
            <div class="alert alert-light">
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.fullName) }}
                    </div>
                    <div class="col-md-3">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="col-md-3">
                        {{ form_row(form.equipe) }}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-check"></i>
                            Confimez la modification
                        </button>
                    </div>
                </div>
            </div>      
            
        {{ form_end(form) }}
    </div>
{% endblock %}